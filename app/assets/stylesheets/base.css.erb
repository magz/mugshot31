	filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src=<%= asset_path "tip_overlay.png" %>, sizingMethod='crop');
}
.zoom_thumb  .tip img{
	width: 200px !important;
	height: 200px !important;
	position: absolute !important;
	left: 20px !important;
	top: 19px !important;
	z-index: 2 !important;
	display: none;
}
.zf_hover,
.zoom_thumb:hover{
	position: relative;
  z-index: 999999;
}
.zf_hover .tip,
.zoom_thumb:hover .tip{
	left: -250px;
	top: -55px;
	display: block;
}
* html .zf_hover .tip,
* html .zoom_thumb:hover .tip{
	top: -60px;
}
* + html .zoom_thumb:hover .tip{
	top: -60px;
}
.zoom_thumb .tip{
	opacity: 0.7;
	-moz-opacity:0.7;
}
.zf_hover .tip img,
.zoom_thumb:hover .tip img{
	display: block;
}
.zoom_thumb  .tip:hover{
