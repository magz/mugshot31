/* @group Guide Steps */



#guide_steps{
	width: 520px;
	margin: 0 2px; /* margin + width = 524px */
	height: 200px;
	margin-top: 10px;
	background: #EAEAEA url(<%= asset_path 'rounded_grey_bottom.gif' %>) 0 bottom no-repeat;
}
#guide_steps ol{
	margin: 0;
	padding: 0;
	list-style: none;
	position: relative;
	width: 520px;
	height: 200px;
	background: url(<%= asset_path 'rounded_grey_top.gif' %>) 0 top no-repeat;	
}
#guide_steps ol li{
	width: 150px;
	height: 200px;
	margin: 0;
	padding: 0;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 1;
}
#guide_steps ol li .desc{
	position: absolute;
	width: 520px;
	top: 10px;
	left: 0;
	text-align: center;
	font-size: 13px;
	color: #333;
	line-height: 28px;
	height: 28px;
	z-index: 1;
	visibility: hidden;
	text-indent:-1000em;
	background: url(<%= asset_path '4_step_rollovers.gif' %>) center 0 no-repeat;
}
#guide_steps ol li .desc p{
	margin:0;
	padding: 0;
}

#guide_steps ol li.hover .desc,
#guide_steps ol li:hover .desc{
	visibility: visible;
}
#guide_steps ol li h3{
	text-indent: -1000em;	
	width: 100%;
	height: 100%;
	position: relative;
	z-index: 2;
}
#guide_steps ol li#signup_step{
	left: -35px;
	width: 140px;
}
#guide_steps ol li#signup_step h3{
	background: url(<%= asset_path 'signup_step.png' %>) 0 0 no-repeat;	
}
* html #guide_steps ol li#signup_step h3{
	background: none;
	filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src="/assets/signup_step.png", sizingMethod="crop");	
}
#guide_steps ol li#signup_step .desc{
	left: 35px;
}
#guide_steps ol li#reminder_step{
	left: 105px;
	width: 130px;
}
#guide_steps ol li#reminder_step h3{
	background: url(<%= asset_path 'reminder_step.png' %>) 0 0 no-repeat;	
}
* html #guide_steps ol li#reminder_step h3{
	background: none;
	filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src="/assets/reminder_step.png", sizingMethod="crop");	
}

#guide_steps ol li#reminder_step .desc{
