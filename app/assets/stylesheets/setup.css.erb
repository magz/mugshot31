/* @group Mugshot Method */

#mugshot_method{
	padding: 0;
	margin: 0;
	list-style: none;
	list-style-image: none;
	height: 165px;
	position: relative;
	background: url(/assets/upload_method_or.gif) center 110px no-repeat;
}

#mugshot_method{
	padding: 0;
	margin: 2em 0;
	list-style: none;
	list-style-image: none;
	height: 165px;
}
#mugshot_method a{
	position: absolute;
	left: 25px;
	top: 0;
	width: 190px;
	height: 165px;
	display: block;
	text-indent: -9000px;
	border: none;	
}
#mugshot_method li.webcam a{
	background: url(../assets/upload_webcam.jpg) 0 0 no-repeat;
}
#mugshot_method li.digicam a{
	background: url(../assets/upload_digicam.jpg) 0 0 no-repeat;	
	left: auto;
	right: 25px;
}
#mugshot_method li a:hover,
#mugshot_method li a.current{
	background-position: 0 -165px;
}
p.webcam{
	padding-left: 70px;
	background: url(/assets/webcam_mini.gif) 0 center no-repeat;
	
}
p.digicam{
	border-top: 1px solid #CCC;
	padding-top: 1em;
	margin-top: 1em;
	padding-left: 70px;
	background: url(/assets/digicam_mini.gif) 0 center no-repeat;
}
