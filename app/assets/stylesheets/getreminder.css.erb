.mac_download_button{
	background-image: url(/assets/mac_download_button.gif);
}
.win_download_button{
	background-image: url(/assets/win_download_button.gif);
}
.mac_download{
	background: url(/assets/mac_icon.gif) 0 center no-repeat;
	padding-left: 18px;
}
.win_download{
	background: url(/assets/win_icon.gif) 0 center no-repeat;
	padding-left: 18px;	
}
.alt_download{
	color: #999;
	font-size: 85%;
	padding-left: 0.5em;
}
.download_options{
	float: left;
	margin-left: 10px;
}
.download_reasons{
	margin-top: 0.5em;
}
.get_reminder_content{
	width:440px;
	margin:0 auto;
	position:relative;
}
.get_reminder_content img{
	float: left;
}
.skip_step{
	margin-top:10px;
	float:right;
}
.faq_link{
	margin-top:10px;
	clear:both;
	float:left;
}
#download_links .mac,
#download_links.mac .win{
	display:none;
}
#download_links.mac .mac{
	display:block;
}