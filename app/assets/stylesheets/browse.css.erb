/* @group Sequence List */


#sequence_list{
	margin:15px 0px 0px 0 !important;
	padding: 0px 0 0 0 !important;
	list-style: none;
	list-style-image: none;
	width: 520px;
	clear: both;
}
#sequence_list li{
	width: 110px;
	height: auto;
	float: left;
	margin:0 8px 15px 12px;
	text-align: center;	
	font-size: 13px;
	line-height: 1.3em;
	cursor: pointer;
	cursor:hand;	
}
* html #sequence_list li{
	display: inline;
}
#sequence_list li a{
	background:  url(<%=asset_path "browse_sequence_header_hover.gif" %>) 0 0 no-repeat;	
}
#sequence_list li a,
#sequence_list li span.zoom_thumb{
	display: block;
	width: 100%;
	height: auto;
	float: left;	
	border: 0;
	cursor: pointer;
	cursor:hand;
	background:  url(<%=asset_path "browse_sequence_bg.gif" %>) 0 0 repeat-y;
}
#sequence_list li span.zoom_thumb{
	cursor: default;
}
#sequence_list .list_container{
	display: block;
	width: 100%;
	height: auto;
	float: left;
	padding: 0 0 5px 0;
	background:  url(<%=asset_path "browse_sequence_footer.gif" %>) 0 bottom no-repeat;	
}
* html #sequence_list .list_container{
	width:auto;
	height:auto;
	float:none;
}
* + html #sequence_list .list_container{
	width:auto;
	height:auto;
	float:none;
}
#sequence_list .list_container img{
	width: 50px;
	height: 50px;
}
#sequence_list li .name{
	display: block;
	width: 110px;
	font-weight: bold;
	color: white;
	background: #84A524  url(<%=asset_path "browse_sequence_header.gif" %>) 0 0 no-repeat;
	margin-bottom: 5px;
	border-bottom: 1px solid white;
	padding: 1px 0;
	overflow:hidden;
}
#sequence_list li a:hover,
#sequence_list li span.zf_hover{
	z-index: 2;
	position: relative;
}
#sequence_list li a:hover .name{
	background: #137DDF  url(<%=asset_path "browse_sequence_header_hover.gif" %>) 0 0 no-repeat;
}
#sequence_list li .date{
	display: block;
	color: #666;
}
#sequence_list li .number{
	display: block;
	color: #666;
}

/* @group Tooltip */


#sequence_list li .tip img{
	width: 200px;
	height: 200px;
	position: absolute;
	left: 20px;
	top: 19px;
	z-index: 2;
	display: none;
}
#sequence_list li a:hover .tip,
#sequence_list li span.zf_hover .tip{
	left: -250px;
	top: -30px;
	display: block;
}
#sequence_list li a:hover .tip img,
#sequence_list li span.zf_hover .tip img{
	display: block;
}

/* @end */


