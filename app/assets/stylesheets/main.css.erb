/*----------------------- Handle some defaults ------------------------*/
* {
	margin: 0;
	padding: 0;
	font-family: arial bold, arial;
}

input, select, textarea {
	border:2px solid #CCCCCC;
	color:#333333;
	font-size:20px;
	font-size-adjust:none;
	font-stretch:normal;
	font-style:normal;
	font-variant:normal;
	font-weight:normal;
	line-height:normal;
	margin:5px 0pt;
	padding:2px;
}

body {
	background: #ccffff;
}

hr {
	border-color: #ccffff;
	border-style:none none solid;
	border-width:medium medium 4px;
}

/*---------------------Div Class to clear the floats -------------------*/
div.clearfloat {
	clear: both;
}

/*----------------------- Center the content --------------------------*/
body {
	text-align: center;
}

#centerWrapper {
	margin: 0 auto;
	width: 780px;
}
/***********************************************************************
J U S T  T A K E N  S L I D E  - U P S
************************************************************************/
#just {
	position: fixed;
	bottom: 0;
	right: 10;
	width: 180px;
	height: 50px;
}

#last {
	visibility: hidden;
}

